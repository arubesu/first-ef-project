@model FirstEFProject.Domain.Category
@using FirstEFProject.Domain

@{
    ViewData["Title"] = "Category Register";

}

@foreach(var item in ViewBag.Categories as List<Category> )
{
    <li> 
        @item.Name 
        <a href="/Category/Index/@item.Id">Editar</a>
        <form asp-action="Delete" asp-controller="Category" method="DELETE">
            <input type="hidden" name="id" value="@item.Id">
            <button type="submit" class="btn btn-default"> X </button>
         </form>
    </li>
}

<form asp-action="Register" asp-controller="Category" method="POST">
    <input type="hidden" asp-for="Id">
    <div class="form-group"> 
        <label for="Name"> Name </label>
        <input type="text" class="form-control" asp-for="Name"> 
    </div> 
    <button type="submit" class="btn btn-default"> Save</button>
    
</form>

